<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InfoHeading">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="InfoHeadingWidget">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/bg_rounded_corners</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="InfoSubHeading" parent="@style/InfoHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#CCCCCC</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="InfoHeadingCompare">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="InfoSubHeadingCompare" parent="@style/InfoHeadingCompare">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">#CCCCCC</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="InfoRowCompare">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="RegularButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_orange_bg</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="FragmentButton" parent="@style/RegularButton">
        <item name="android:onClick"></item>
    </style>

    <style name="MenuButton" parent="@style/RegularButton">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/button_orange</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="FriendHeadingRow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#EBEBEB</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- Dialog -->

    <style name="StandardPopup" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
</resources>