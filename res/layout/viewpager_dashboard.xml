<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:swipeytabs="http://schemas.android.com/apk/res/com.ninetwozero.bf3droid"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

  <!-- #FFFFC600 -->

  <net.peterkuterna.android.apps.swipeytabs.SwipeyTabs
      android:id="@+id/swipeytabs"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:background="#FF000000"
      swipeytabs:bottomBarColor="#ff30b2e2"
      swipeytabs:bottomBarHeight="1.5dip"
      swipeytabs:tabIndicatorHeight="4.5dip"/>

  <android.support.v4.view.ViewPager
      android:id="@+id/viewpager"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_below="@id/swipeytabs"
      android:layout_marginBottom="40dp"/>

  <!-- COM HERE -->

  <include layout="@layout/com_center_slider"/>

</RelativeLayout>