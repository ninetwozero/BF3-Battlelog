<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wrap_list_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >

    <TextView
        android:id="@+id/text_posted_by"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:padding="2dp"
        android:text="@string/info_xml_threaddate"
        android:textColor="@color/grey"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/text_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_posted_by"
        android:padding="2dp"
        android:text="Yo wo, what\&apos;s up man? You want beef?! I\&apos;ll give you beef!!! Ha-yaaah!" />

</RelativeLayout>