<ScrollView    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	>			
		<TextView 
		    style="@style/FriendHeadingRow"
		    android:id="@+id/string000"
			android:text="Who am I?"
	    />	
	    <RelativeLayout
	        android:id="@+id/wrap_who"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:padding="10dp"
	    	android:layout_below="@id/string000"
		>	
		    <ImageView 
		    	android:id="@+id/image_gravatar"
		    	android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		    	android:src="@drawable/ninetwozero_eye"
		    	android:layout_marginRight="10dp"
		    />
		    <RelativeLayout
		        android:id="@+id/wrap_who_left"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
		    	android:layout_below="@id/string000"
				android:layout_toRightOf="@id/image_gravatar"
				android:layout_centerVertical="true"
			>	
				<TextView 
				    android:id="@+id/text_name"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
					android:text="Karl Lindmark"
					android:textSize="24sp"
			    />
				<TextView 
				    android:id="@+id/text_role"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
					android:text="Student / freelancing developer"
					android:layout_below="@id/text_name"
			    />
				<TextView 
				    android:id="@+id/text_lives"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
					android:text="Living in UmeÃ¥, Sweden"
					android:layout_below="@id/text_role"
			    />
			</RelativeLayout>
		</RelativeLayout>	
		<TextView 
		    style="@style/FriendHeadingRow"
		    android:id="@+id/string001"
			android:text="Contact information"
	    	android:layout_below="@id/wrap_who"
	    />	
	    <RelativeLayout
	        android:id="@+id/wrap_contact"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:padding="10dp"
	    	android:layout_below="@id/string001"
		>	
				    
		    <RelativeLayout
		        android:id="@+id/wrap_web"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
	    		android:onClick="onContactClick"
			>	
				<ImageView 
			    	android:id="@+id/image_web"
			    	android:layout_width="36dp"
				    android:layout_height="36dp"
			    	android:src="@drawable/ninetwozero_avatar"
			    	android:layout_marginRight="10dp"
		    		android:layout_centerVertical="true"
			    />
				<TextView 
				    android:id="@+id/string0011"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
					android:text="Website"
					android:layout_toRightOf="@id/image_web"
			    />
				<TextView 
				    android:id="@+id/text_web"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
					android:text="http://ninetwozero.com"
					android:layout_toRightOf="@id/image_web"
					android:layout_below="@id/string0011"
			    />
			</RelativeLayout>	
			<RelativeLayout
		        android:id="@+id/wrap_twitter"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/wrap_web"
	    		android:layout_marginTop="10dp"
	    		android:onClick="onContactClick"
			>	
			    <ImageView 
			    	android:id="@+id/image_twitter"
			    	android:layout_width="36dp"
				    android:layout_height="36dp"
			    	android:src="@drawable/ninetwozero_twitter"
			    	android:layout_marginRight="5dp"
		    		android:layout_centerVertical="true"
			    />
				<TextView 
				    android:id="@+id/string0012"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
					android:text="Twitter"
					android:layout_toRightOf="@id/image_twitter"
					android:layout_marginLeft="5dp"
			    />
				<TextView 
				    android:id="@+id/text_twitter"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
					android:text=" @karllindmark"
					android:layout_toRightOf="@id/image_twitter"
					android:layout_below="@id/string0012"
			    />
			</RelativeLayout>		
			<RelativeLayout
		        android:id="@+id/wrap_email"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/wrap_twitter"
	    		android:layout_marginTop="10dp"
	    		android:onClick="onContactClick"
			>				
			    <ImageView 
			    	android:id="@+id/image_email"
			    	android:layout_width="36dp"
				    android:layout_height="36dp"
			    	android:src="@drawable/ninetwozero_avatar"
			    	android:layout_marginRight="5dp"
		    		android:layout_centerVertical="true"
			    />
				<TextView 
				    android:id="@+id/string0013"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
					android:text="E-mail"
					android:layout_toRightOf="@id/image_email"
					android:layout_marginLeft="5dp"
			    />
				<TextView 
				    android:id="@+id/text_email"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
					android:text="support@ninetwozero.com"
					android:layout_toRightOf="@id/image_email"
					android:layout_below="@id/string0013"
					android:layout_marginLeft="5dp"
			    />
			</RelativeLayout>		
			<RelativeLayout
		        android:id="@+id/wrap_forum"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/wrap_email"
	    		android:layout_marginTop="10dp"
	    		android:onClick="onContactClick"
			>	
				<ImageView 
			    	android:id="@+id/image_forum"
			    	android:layout_width="36dp"
				    android:layout_height="36dp"
			    	android:src="@drawable/ninetwozero_avatar"
			    	android:layout_marginRight="5dp"
		    		android:layout_centerVertical="true"
			    />
				<TextView 
				    android:id="@+id/string0014"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
					android:text="@string/label_forum"
					android:layout_toRightOf="@id/image_forum"
					android:layout_marginLeft="5dp"
			    />
				<TextView 
				    android:id="@+id/string00141"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
					android:text="(also supports the Tapatalk-app)"
					android:layout_toRightOf="@id/string0014"
					android:layout_alignBaseline="@id/string0014"
					android:layout_marginLeft="5dp"
					android:textSize="10sp"
			    />
				<TextView 
				    android:id="@+id/text_forum"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
					android:text="http://ninetwozero.com/forum"
					android:layout_toRightOf="@id/image_forum"
					android:layout_below="@id/string0014"
					android:layout_marginLeft="5dp"
			    />
			</RelativeLayout>		
			<RelativeLayout
		        android:id="@+id/wrap_xbox"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/wrap_forum"
	    		android:layout_marginTop="10dp"
	    		android:onClick="onContactClick"
			>		
				<ImageView 
			    	android:id="@+id/image_xbox"
			    	android:layout_width="36dp"
				    android:layout_height="36dp"
			    	android:src="@drawable/ninetwozero_xboxlive"
			    	android:layout_marginRight="5dp"
		    		android:layout_centerVertical="true"
			    />
				<TextView 
				    android:id="@+id/string0015"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
					android:text="Xbox Live Gamertag"
					android:layout_toRightOf="@id/image_xbox"
					android:layout_marginLeft="5dp"
			    />
				<TextView 
				    android:id="@+id/text_xbox"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
					android:text="NINETWOZERO"
					android:layout_toRightOf="@id/image_xbox"
					android:layout_below="@id/string0015"
					android:layout_marginLeft="5dp"
			    />
			</RelativeLayout>		
		</RelativeLayout>
		<TextView 
		    style="@style/FriendHeadingRow"
		    android:id="@+id/string003"
			android:text="Donations"
			android:layout_below="@id/wrap_contact"
	    />
		<RelativeLayout
	        android:id="@+id/wrap_paypal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/string003"
	   		android:onClick="onContactClick"
	   		android:padding="10dp"
		>		
			<ImageView 
		    	android:id="@+id/image_paypal"
		    	android:layout_width="36dp"
			    android:layout_height="36dp"
		    	android:src="@drawable/paypal_logo"
		    	android:layout_marginRight="5dp"
	    		android:layout_centerVertical="true"
		    />
			<TextView 
			    android:id="@+id/string0015"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
				android:text="@string/info_about_donating"
				android:layout_toRightOf="@id/image_paypal"
				android:layout_marginLeft="5dp"
				android:gravity="center"
		    />	
		</RelativeLayout>	
	</RelativeLayout>
</ScrollView>