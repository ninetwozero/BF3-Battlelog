<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/widget_root"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/widget_social_bg_stroke"
              android:orientation="vertical"
              android:padding="10dp">

  <TextView
      android:id="@+id/text_user"
      style="@style/InfoHeadingWidget"
      android:padding="5dp"
      android:text="NINETWOZERO"/>

  <RelativeLayout
      android:id="@+id/wrap_online"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/bg_rounded_corners"
      android:padding="10dp">

    <TextView
        android:id="@+id/string_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Friends online"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/text_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="100"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/string_playing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/string_online"
        android:text="Friends playing"
        android:textColor="#777777"/>

    <TextView
        android:id="@+id/text_playing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/string_online"
        android:text="50"
        android:textColor="#777777"/>
  </RelativeLayout>

  <TextView
      android:id="@+id/text_latest"
      style="@style/InfoHeadingWidget"
      android:padding="5dp"
      android:text="Latest updates"/>

  <LinearLayout
      android:id="@+id/wrap_feed"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/wrap_feed_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_rounded_corners"
        android:padding="10dp">

      <TextView
          android:id="@+id/text_content_0"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:maxLines="2"
          android:text="ninetwozero posted a forum post in the thread: FOO CAR STAR"
          android:textColor="#FFFFFF"/>

      <TextView
          android:id="@+id/text_date_0"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_below="@id/text_content_0"
          android:text="6 minutes ago"
          android:textColor="#777777"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wrap_feed_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_rounded_corners"
        android:padding="10dp">

      <TextView
          android:id="@+id/text_content_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:maxLines="2"
          android:text="ninetwozero ate two cookies: chocolate chip and plain chocolate ones"
          android:textColor="#FFFFFF"/>

      <TextView
          android:id="@+id/text_date_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_below="@id/text_content_1"
          android:text="16 minutes ago"
          android:textColor="#777777"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wrap_feed_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_rounded_corners"
        android:padding="10dp">

      <TextView
          android:id="@+id/text_content_2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:maxLines="2"
          android:text="ninetwozero: I&apos;m getting hungry, better head off to bed."
          android:textColor="#FFFFFF"/>

      <TextView
          android:id="@+id/text_date_2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_below="@id/text_content_2"
          android:text="1 hour ago"
          android:textColor="#777777"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wrap_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_rounded_corners"
        android:padding="5dp">

      <Button
          android:id="@+id/button_prev"
          style="@style/FragmentButton"
          android:layout_alignParentLeft="true"
          android:text="&lt;"
          android:textStyle="bold"/>

      <Button
          android:id="@+id/button_next"
          style="@style/FragmentButton"
          android:layout_alignParentRight="true"
          android:text=">"
          android:textStyle="bold"/>

      <Button
          android:id="@+id/button_refresh"
          style="@style/FragmentButton"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:layout_toLeftOf="@id/button_next"
          android:layout_toRightOf="@id/button_prev"
          android:text="Refresh"/>
    </RelativeLayout>
  </LinearLayout>

</LinearLayout>