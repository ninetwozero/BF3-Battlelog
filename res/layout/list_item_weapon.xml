<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
>
	<LinearLayout
	    android:id="@+id/wrap_sstars"
	    android:layout_width="70dp"
	    android:layout_height="70dp"
	    android:padding="5dp"
	    android:gravity="center"
	    android:orientation="vertical"
	    android:background="@drawable/bg_rounded_corners_white"
	    android:layout_marginRight="5dp"
	   	>	
	   	<TextView
		    android:id="@+id/text_sstars"
		    android:layout_width="60dp"
		    android:layout_height="wrap_content"
		    android:text="555"
	    	android:gravity="center"
		    android:textSize="32sp"
		/>

	   	<ImageView
	   	    android:id="@+id/image_sstars"
	   	    android:layout_width="20dp"
	   	    android:layout_height="20dp"
	   	    android:src="@android:drawable/star_on" />

   	</LinearLayout> 
	<ImageView 
	    android:id="@+id/image_item"
	    android:src="@drawable/assignment_01_u"
	    android:layout_width="wrap_content"
	    android:layout_height="70dp"
	    android:adjustViewBounds="true"
	    android:layout_toRightOf="@id/wrap_sstars"
   	/>
	<TextView
	    android:id="@+id/text_title"
	    android:text="FAMAS"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/wrap_sstars"
	    android:layout_marginTop="5dp"
	    android:layout_marginBottom="5dp"
	    android:layout_alignParentLeft="true"
	/>
	<TextView
	    android:id="@+id/text_status"
	    android:text="All unlocked"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/wrap_sstars"
	    android:layout_marginTop="5dp"
	    android:layout_marginBottom="5dp"
	    android:layout_alignParentRight="true"
	/>
	<TextView
	    android:id="@+id/text_progress"
	    android:text="100%"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:layout_below="@+id/text_title"
	    android:layout_marginLeft="5dp"
	    android:layout_alignParentRight="true"
	/>
	<ProgressBar 
	    android:id="@+id/progress_unlocks"
	    style="@android:style/Widget.ProgressBar.Horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="15dp"
		android:layout_below="@+id/text_title"
	    android:layout_alignParentLeft="true"
		android:layout_toLeftOf="@id/text_progress"
	/>
</RelativeLayout>