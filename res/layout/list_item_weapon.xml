<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingBottom="5dp">
	<TextView
	    android:id="@+id/text_id"
		android:layout_width="wrap_content"
		android:layout_height="70dp"
		android:text="123"
		android:textSize="40sp"
		android:gravity="left|center_vertical"
    />
	
  <LinearLayout
      android:id="@+id/wrap_sstars"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_marginRight="5dp"
      android:background="@drawable/bg_rounded_corners"
      android:gravity="center"
      android:orientation="vertical"
      android:padding="5dp"
	  android:layout_alignParentRight="true"
	>

    <TextView
        android:id="@+id/text_sstars"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="555"
        android:textColor="#FFFFFF"
        android:textSize="32sp"/>

    <ImageView
        android:id="@+id/image_sstars"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/servicestar31" 
    />
  </LinearLayout>
  <ImageView
      android:id="@+id/image_item"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_above="@id/text_title"
      android:layout_toRightOf="@id/text_id"
      android:layout_toLeftOf="@id/wrap_sstars"
      android:src="@drawable/w_xp1_famas"
  />
    <TextView
      android:id="@+id/text_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_below="@id/wrap_sstars"
      android:layout_marginBottom="5dp"
      android:layout_marginTop="5dp"
      android:text="FAMAS"/>

  <TextView
      android:id="@+id/text_status"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_below="@id/wrap_sstars"
      android:layout_marginBottom="5dp"
      android:layout_marginTop="5dp"
      android:text="@string/info_unlocks_done"/>

  <TextView
      android:id="@+id/text_progress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_below="@+id/text_title"
      android:layout_marginLeft="5dp"
      android:text="100%"/>

  <ProgressBar
      android:id="@+id/progress_unlocks"
      style="@android:style/Widget.ProgressBar.Horizontal"
      android:layout_width="fill_parent"
      android:layout_height="15dp"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/text_title"
      android:layout_toLeftOf="@id/text_progress"/>
  
</RelativeLayout>